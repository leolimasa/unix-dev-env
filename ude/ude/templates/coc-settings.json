{
    "python.jediEnabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--strict"
    ],
    "tsserver.enable": true,
    "tsserver.log": "verbose",
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": [
                "build.sbt"
            ],
            "filetypes": [
                "scala",
                "sbt"
            ]
        }
    }
}

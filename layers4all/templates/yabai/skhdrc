cmd + shift - b : yabai -m space --layout bsp; yabai -m space --balance
cmd + shift - f : yabai -m space --layout float
cmd + shift - z : yabai -m space --toggle padding; \
                  yabai -m space --toggle gap; \
                  yabai -m window --toggle zoom-fullscreen
cmd + shift - x : yabai -m window --toggle zoom-fullscreen
cmd + shift - g : yabai -m space --toggle padding; yabai -m space --toggle gap
cmd + shift - h : yabai -m window --focus west
cmd + shift - j : yabai -m window --focus south
cmd + shift - k : yabai -m window --focus north
cmd + shift - l : yabai -m window --focus east
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - r : yabai -m space --rotate 90
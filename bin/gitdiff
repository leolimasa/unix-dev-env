#!/usr/bin/env bash

# Outputs the diff of two Git repositories
# Example:
#
# gitdiff ssh@something.com/repo master ssh@something.com/repo somebranch 
#
# The first path is the "base"; the second are the "changes"

mkdir base
mkdir changes 

git clone $1 base
cd base/
git checkout $2

cd ..
git clone $3 changes
cd changes/
git checkout $4

cd ..
diff -bur --exclude=.git base/ changes/ > changes.diff
diff -qr --exclude=.git base/ changes/ > files.diff

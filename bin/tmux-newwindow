#!/bin/bash

# Create layout
tmux new-window -n $(basename $1)
tmux split-window -v
tmux split-window -h

# CD into directories
tmux select-pane -t 0
tmux send-keys "cd $1" Enter
tmux send-keys "vim" Enter
tmux send-keys -t 1 "cd $1" Enter
tmux send-keys -t 2 "cd $1" Enter

# Resize console pane
tmux select-pane -t 1
tmux resize-pane -D 10


